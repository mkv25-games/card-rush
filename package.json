{
  "name": "card-rush",
  "title": "Card Rush",
  "version": "1.0.0",
  "description": "Game development project for a persistent Deck Building adventure game.",
  "main": "main.js",
  "build": {
    "appId": "net.mkv25.card-rush",
    "productName": "Card Rush",
    "copyright": "Copyright Â© 2022 mkv25.net",
    "directories": {
      "buildResources": "build"
    }
  },
  "scripts": {
    "start": "sh ./build-scripts/start-dev.sh",
    "start:with-dev-tools": "FORCE_OPEN_DEV_TOOLS=true npm start -s",
    "start:predist": "./build-scripts/start-pre-dist.sh",
    "start:predist:with-dev-tools": "FORCE_OPEN_DEV_TOOLS=true ./build-scripts/start-pre-dist.sh",
    "test": "standard && mkvconf lint modpacks/**/*.conf",
    "forge-start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "standard --fix && mkvconf lint modpacks/**/*.conf --fix"
  },
  "keywords": [
    "Card Rush"
  ],
  "author": "mkv25.net",
  "license": "UNLICENSED",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "cheerio": "^1.0.0-rc.10",
    "electron": "^15.0.0-beta.7",
    "standard": "^16.0.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/vue-fontawesome": "^3.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.1",
    "mkvconf": "^1.2.0",
    "promise-path": "^1.4.1",
    "remote-model": "^1.1.0",
    "web-worker": "^1.2.0"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "standard": {
    "ignore": [
      "mainui"
    ]
  }
}
